<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pay_item"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/iv_pay_goodsimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/account"/>
    <TextView
        android:id="@+id/tv_pay_goodsname"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/iv_pay_goodsimage"
        android:layout_marginRight="16dp"
        android:text="아이스 카페 아메리카노"
        android:textSize="16dp"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/tv_pay_goodsamount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_pay_goodsname"
        android:layout_toRightOf="@id/iv_pay_goodsimage"
        android:text="X1"
        android:textSize="14dp"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/tv_pay_goodsprice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="15,000 원"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="textEnd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/leftmargin"
        android:layout_marginVertical="6dp"
        android:background="@color/gray"/>
</RelativeLayout>